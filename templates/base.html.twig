<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>{% block title %}Welcome!{% endblock %}</title>
	{% block stylesheets %}{% endblock %}
	<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ asset('css/main.css') }}">
	<script src="{{ asset('js/jquery.min.js') }}"></script>
	<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
</head>
<body>
	<!-- Navigation -->
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<a href="" class="navbar-brand">Shaunta's Boutique</a>
			<ul class="nav navbar-nav">
				{% for p_cat in cat %}
				<li class="dropdown">
					<a href="#" class="dropdown" data-toggle="dropdown">
						{{ p_cat.category }}<span class="caret"></span>
					</a>
					<ul class="dropdown-menu" role="menu">
						{% for c_cat in p_cat.child %}
						<li><a href="category.php?cat=<?=$parent2['id'];?>">{{ c_cat.category }}</a></li>
						{% endfor %}
					</ul>
				</li>
				{% endfor %}
				<li><a href="cart.php"><span class="glyphicon glyphicon-shopping-cart"></span> My Cart</a></li>
			</ul>
		</div>
	</nav>


	{% block body %}{% endblock %}
	{% block footer %}{% endblock %}
	<script src="{{ asset('js/fonctions.js') }}" type="text/javascript"></script>
	{% block javascripts %}{% endblock %}

</body>
</html>
